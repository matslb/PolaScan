@using static PolaScan.App.Models.Enums;
<span class="@GetClassName()"></span>

@code {
    [Parameter]
    public string IconName { get; set;}

    [Parameter]
    public int Size { get; set; } = 1;
    
    [Parameter]
    public AppColor Color { get; set; } = AppColor.white;
    
    private string GetClassName() => $"fas fa-{IconName} fa-{Size}x icon {Color}";
 } 
